{
  "name": "agentweaver-cli",
  "version": "0.1.0",
  "description": "CLI tool for installing pre-built AI agent templates and reusable skills for Claude Code projects",
  "main": "dist/index.js",
  "bin": {
    "agentweaver": "./dist/cli/index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "node -e \"require('fs-extra').copySync('src/templates', 'dist/templates')\"",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CodeLift-LLC/AgentWeaver-CLI.git"
  },
  "keywords": [
    "claude-code",
    "ai-agents",
    "mcp",
    "agent-templates",
    "cli",
    "developer-tools",
    "code-generation",
    "ai-development"
  ],
  "author": "CodeLift LLC",
  "license": "MIT",
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "commander": "^12.0.0",
    "inquirer": "^9.2.0",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "gray-matter": "^4.0.3",
    "chalk": "^5.3.0",
    "semver": "^7.6.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0",
    "@vitest/coverage-v8": "^1.2.0"
  }
}
